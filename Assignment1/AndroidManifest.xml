<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assignment1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayMessageActivity"
            android:label="@string/title_activity_display_message" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assignment1" />
        </activity>
        <activity
            android:name=".SendDataToLoggingActivity"
            android:label="@string/title_activity_send_data_to_logging" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assignment1" />
        </activity>
        <activity
            android:name=".DownloadImage"
            android:label="@string/title_activity_download_image" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assignment1" />
        </activity>
        <activity
            android:name=".DownloadText"
            android:label="@string/title_activity_download_text" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.assignment1" />
        </activity>
    </application>

</manifest>